<?xml version="1.0" encoding="utf-8"?>
<!--
  Compartment Preferences Template

  使い方:
  1. このファイルを "Preferences.xml" にコピー
  2. 必要に応じて設定を変更
  3. Compartment.exe と同じフォルダに配置
-->
<PreferencesDat>

  <!-- ============================== -->
  <!-- Compartment設定 -->
  <!-- ============================== -->
  <CompartmentNo>1</CompartmentNo>

  <!-- ============================== -->
  <!-- API設定 -->
  <!-- ============================== -->
  <!-- APIサーバーのポート番号 -->
  <!-- 複数のCompartmentを動かす場合は部屋ごとに変更 -->
  <!-- 例: 部屋1=5001, 部屋2=5002, 部屋3=5003 -->
  <ApiServerPort>5000</ApiServerPort>

  <!-- ============================== -->
  <!-- デバッグモード設定 -->
  <!-- ============================== -->
  <!-- デバッグモードを有効化（ハードウェアなしで動作） -->
  <!-- true: 有効, false: 無効（実機使用） -->
  <EnableDebugMode>false</EnableDebugMode>

  <!-- デバッグモードのタイプ -->
  <!-- FullDummy: 完全ダミー（ハードウェア一切不要） -->
  <!-- Hybrid: ハイブリッド（実機＋手動シミュレート） -->
  <DebugModeType>FullDummy</DebugModeType>

  <!-- ============================== -->
  <!-- RFID設定 -->
  <!-- ============================== -->
  <ComPort>COM1</ComPort>
  <ComBaudRate>19200</ComBaudRate>

  <!-- ============================== -->
  <!-- 課題設定例（既存の設定） -->
  <!-- ============================== -->
  <!--
  以下は既存のCompartment設定項目のサンプルです。
  実際の運用環境に応じて適切な値を設定してください。
  -->

</PreferencesDat>
